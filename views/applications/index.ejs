<%- include("../partials/head.ejs") %>
<body>
  <%- include("../partials/sidebar.ejs") %>
  <h1>My Applications</h1>
  <div class="application-list-container">
    <table class="application-table">
      <% applications.forEach(application => { %>
        <thead>
          <tr class="table-header">
            <th>Company</th>
            <th>Position</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <tr class="application-entry">
            <td><%= application.companyName %></td>
            <td><%= application.positionTitle %></td>
            <td class="application-status"><%= application.status %></td>
            <td><a href="/application/<%=application._id%>">View</a></td>
          </tr>
        </tbody>
      <% }) %>
    </table>
    <a href="/application/new"><button>Add an Application</button></a>
  </div>
</body>
</html>
